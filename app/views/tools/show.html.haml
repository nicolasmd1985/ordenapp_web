.row.flex-box-center.tool-detail
  .col.s12.m10.force_margin
    .card.card-cascade.narrower.pt-0.light-1
      .view.view-cascade.gradient-card-header.gradient-blue.narrower.py-3.mx-4.d-flex.justify-content-between.align-items-center
        = link_to tools_path, role: "button", class: "btn btn-outline-white btn-rounded btn-sm px-2", title: "Back" do
          %i.fas.fa-chevron-left
        %h3.center.mt-2
          %strong
            = t('tools.index.tool')
        = link_to edit_tool_path(@tool.slug), role: "button", class: 'btn btn-outline-white btn-rounded btn-sm px-2', title: "Show" do
          %i.fas.fa-edit
      .row{style: "margin-top: 30px"}
        .col-12.mb-4.mb-md-0
          .card.mt-0
            %h5.card-header.text-center
              = t('tools.index.details')
            .card-body
              .row
                .col-12.col-lg-6
                  %ul.list-group.list-group-flush
                    %li.list-group-item
                      %i.far.fa-newspaper.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          = t("tools.index.slug")
                        = @tool.slug
                    %li.list-group-item
                      %i.fas.fa-calendar-check.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          = t("tools.index.code_scan")
                        = @tool.code_scan
                    %li.list-group-item
                      %i.far.fa-newspaper.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          = t("tools.index.name")
                        = @tool.name
                    %li.list-group-item
                      %i.fas.fa-signature.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          =t("tools.index.description")
                        = @tool.description
                    %li.list-group-item
                      %i.fas.fa-info-circle.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          =t("tools.index.status")
                        = @tool.status.description
                .col-12.col-lg-6
                  %ul.list-group.list-group-flush
                    %li.list-group-item
                      %i.far.fa-calendar-alt.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          =t("tools.index.registered")
                        = @tool.user_id ? "#{@tool.user.first_name } #{@tool.user.last_name}" : 'NA'
                    %li.list-group-item
                      %i.fas.fa-qrcode.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          =t("tools.index.created")
                        = @tool.created_at ? @tool.created_at.strftime("%Y-%m-%d - %T") : 'NA'
                    %li.list-group-item
                      %i.fas.fa-redo.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          =t("tools.index.updated")
                        = @tool.updated_at ? @tool.updated_at.strftime("%Y-%m-%d - %T") : 'NA'
                    %li.list-group-item
                      %i.fas.fa-user-tie.mr-3{"aria-hidden" => "true"}
                      %p
                        %b
                          =t("tools.index.responsable")
                        = @tool.tecnic_id ? "#{@tool.tecnic.first_name } #{@tool.tecnic.last_name}" : 'NA'
            .card-footer.text-muted.text-center
              = "#{t('base.forms.updated_at')} #{@tool.updated_at.strftime("%Y-%m-%d")}"

.card
  .card-body
    = render "comment_form", tool: @tool
    - if @comments.count > 0
      = render "tool_comments"
