.invisible#breadcrumb
  = render_breadcrumbs
.row.flex-box-center
  .col.s12.m10.force_margin
    .card.card-cascade.narrower.pt-0.light-1
      .view.view-cascade.gradient-card-header.gradient-blue.narrower.py-3.mx-4.d-flex.justify-content-between.align-items-center
        = link_to :back, role: "button", class: "btn btn-outline-white btn-rounded btn-sm px-2", title: t("base.forms.back") do
          %i.fas.fa-chevron-left
        %h3.center.mt-2
          %strong
            = t("base.bar_menu.admins.supervisor")
        = link_to new_user_path(:role => 1), role: "button", class: "btn btn-outline-white btn-rounded btn-sm px-2", title: "Add Supervisor" do
          %i.fas.fa-plus
      .card.py-0
        .card-body
          .user-tableWrapper
            %table#user-table.table.table-striped.table-bordered.table-hover.table-sm.btn-table{:cellspacing => "0", :width => "100%"}
              %caption
                = t("dashboard.supervisor.list")
              %thead.secondary-color.white-text.align-center
                %tr
                  %th.center
                    = t("users.index.c_name")
                  %th.center
                    = t("users.index.id")
                  %th.center
                    = t("users.index.email")
                  %th.center
                    = t("users.index.phone")
                  %th
                    = t("base.navbar.subsidiary")
                  %th.center.options.th-sm
                    =t("base.forms.options")
              %tbody
                - @users.each do |user|
                  %tr
                    %td.center
                      = "#{user.try(:first_name)} #{user.try(:last_name)}"
                    %td.center
                      = user.document_type
                      %br
                      = user.document_number
                    %td.center
                      = user.email
                    %td.center
                      = user.phone_number_1
                    %td.align-center
                      = user.subsidiary.name
                    %td.align-center
                      //.btn-group-vertical{"aria-label" => "button group", :role => "group"}
                      = link_to user, class: 'card__button btn-floating btn btn-primary btn-sm', style: "z-index: 0; padding: 0", title: t("base.forms.details") do
                        %i.fas.fa-info
                      = link_to edit_user_path(user), class: 'card__button btn-floating btn btn-success btn-sm', style: "z-index: 0; padding: 0", title: t("base.forms.edit") do
                        %i.fas.fa-edit
